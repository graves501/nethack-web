{
  "name": "nethack-godot",
  "version": "1.0.0",
  "description": "Nethack for the web using godot as the UI.",
  "type": "module",
  "scripts": {
    "prepare:nethack": "cd NetHack && git apply ../lib/fixes.diff",
    "setup:nethack": "cd NetHack/sys/unix && ./setup.sh hints/linux.370 && cd ../.. && make fetch-lua",
    "build:nethack:tiles": "cd NetHack/win/share && gcc tilemap.c -I ../../include -o ../tilemap.o && cd ../ && ./tilemap.o",
    "build:nethack": "cd NetHack && make CROSS_TO_WASM=1",
    "copy:nethack": "cp NetHack/targets/wasm/nethack.js NetHack/targets/wasm/nethack.wasm ./lib",
    "fix:nethack": "sed -i '/var ENV = {}/a Module.ENV = ENV;' ./lib/nethack.js",
    "build:js": "rollup -c rollup.config.js",
    "build:godot": "godot --export-debug Web",
    "build": "npm run build:godot && npm run build:js && cp lib/nethack.wasm build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-esm-shim": "^0.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-typescript": "^11.1.0",
    "rollup": "^3.21.0",
    "rollup-plugin-node-polyfills": "^0.2.1"
  },
  "dependencies": {
    "rxjs": "^7.8.0"
  }
}